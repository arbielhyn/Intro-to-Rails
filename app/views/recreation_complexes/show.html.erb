<!-- app/views/recreation_complexes/show.html.erb -->
<h1><%= @recreation_complex.name %></h1>

<% if @library %>
  <h2>Library Information</h2>
  <p>Name: <%= @library.name %></p>
  <p>Address: <%= @library.address %></p>
  <p>Notes: <%= @library.notes %></p>
  <p>Website: <%= @library.website %></p>
<% else %>
  <p>No library associated with this recreation complex.</p>
<% end %>
