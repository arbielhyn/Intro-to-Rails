<!DOCTYPE html>
<html>
<head>
  <title>Project</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><%= link_to 'Recreation Complexes', recreation_complexes_path %></li>
        <li><%= link_to 'Libraries', libraries_path %></li>
        <li><%= link_to 'Fitness Centers', fitness_centers_path %></li>
        <li><%= link_to 'About', about_path %></li>
      </ul>
    </nav>
  </header>

  <%= form_with(url: recreation_complexes_path, method: "get", local: true) do |form| %>
    <div>
      <%= form.text_field :search, placeholder: "Search by name...", class: "form-control" %>
    </div>
    <%= form.submit "Search" %>
  <% end %>

  <main>
    <%= yield %>
  </main>
</body>
</html>
