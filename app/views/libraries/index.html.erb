<!-- app/views/libraries/index.html.erb -->
<div class="container mx-auto p-4">
  <h1 class="text-3xl font-bold mb-4">Libraries</h1>

  <% if @libraries.any? %>
    <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @libraries.each do |library| %>
        <li class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-200">
          <%= link_to library_path(library), class: "block p-4", style: "text-decoration: none;" do %>
            <div>
              <strong class="block text-xl mb-2 text-blue-600 hover:text-blue-700 hover:underline">
                <%= library.name %>
              </strong>
              <p class="text-gray-600">
                <!-- Add additional library details here if needed -->
              </p>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-500">No libraries found.</p>
  <% end %>
</div>
